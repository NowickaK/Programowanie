#include <stdio.h>

int main()
{
    int i,j,k,l=5,suma=0;
    int liczba=3;
    for(k=0;k<liczba;k++){
        for(i=l;i>0;i--){
            for(j=i;j>0;j--){
                printf("*");
                suma++;
            }
            printf("\n");
        }
        printf("\n");
        l--;
    }
    printf("Ilosc gwiazdek: %i",suma);
    return 0;
}
